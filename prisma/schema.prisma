generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt

  username String @unique
  hash String

  firstName String?
  lastName String?
  name String?
  email String?

  posts Post[]
  
  @@map("users")
}

model Post {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt

  title String
  description String?
  content String

  userId Int
  author User @relation(fields: [userId], references: [id])
  
  @@map("posts")
}